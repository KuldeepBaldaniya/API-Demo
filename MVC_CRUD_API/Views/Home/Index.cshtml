@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/table.css" rel="stylesheet" />

<div class="container">
    <div class="table-wrapper">
        <div class="col-sm-6">
            <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#create"><i class="material-icons"></i> Add New Employee</a>
        </div>
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Technobrain <b>Employees</b></h2>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover" id="Table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Edit</th>
                    <th>Info</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!--Model For Create-->
<div class="modal fade" id="create" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add New Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div style="display:none">
                <input type="text" class="form-control" id="IDCReate">
            </div>
            <div class="modal-body">
                <label for="namecreate" class="form-label">Name</label>
                <input type="text" class="form-control" id="namecreate" required>
                <p id="valfname"></p>

                <label for="emailcreate" class="form-label">Email</label>
                <input type="email" class="form-control" id="emailcreate" required>
                <p id="email"></p>

                <label for="phonecreate" class="form-label">Phone</label>
                <input type="number" class="form-control" id="phonecreate" required>
                <p id="phonevalidation"></p>

                <label for="addresscreate" class="form-label">Address</label>
                <input type="text" class="form-control" id="addresscreate" required>
                <p id="addressval"></p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="Createbtn" onclick="addvalidation();">Create</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!--Model For Details-->
<div class="modal fade" id="DetailByID" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!--Input For Id-->
                <input type="text" style="display:none" class="form-control" id="IDinfo">

                <label for="exampleInputEmail1" class="form-label">Name</label>
                <input type="text" class="form-control" id="nameinfo">

                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="text" class="form-control" id="emailinfo">

                <label for="exampleInputEmail1" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phoneinfo">

                <label for="exampleInputEmail1" class="form-label">Address</label>
                <input type="text" class="form-control" id="addressinfo">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!--Model For Update Id -->
<div class="modal fade" id="UpdateByID" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Update Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!--Input For Id-->
                <input type="text" style="display:none" class="form-control" id="ID">

                <label for="exampleInputEmail1" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" required>

                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="Uemail" required>

                <label for="exampleInputEmail1" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" required>

                <label for="exampleInputEmail1" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" required>
            </div>
            <div class="modal-footer">
                <button type="submit" onclick="Update();" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!--Model For Delete -->
<div class="modal fade" id="Delete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="staticBackdropLabel">Deleting Record...</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @*<h3>Are You Sure ...?</h3>*@
                <h3>Are you sure you want to Delete this item ...?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="ConfirmDelete();">Yes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
